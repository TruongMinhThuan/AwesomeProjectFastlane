    #   scheme: "AwesomeProject",

    # )

    build_app(
      workspace: "AwesomeProject.xcworkspace",
      scheme: "AwesomeProject",
      configuration: "Debug",
      export_method: "development",
      destination: "id=753EE107-5E89-4712-B1D2-445FBD5C973E",
    )
  end
end